<?xml version="1.0" encoding="utf-8"?>
<!-- Ekran: Profil / Kişisel Bilgiler -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Geri Düğmesi -->
        <Button
            android:id="@+id/btnBackFromProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="< Back"
            android:textAllCaps="false" />

        <!-- Kişisel Bilgiler Başlık -->
        <TextView
            android:id="@+id/tvPersonalInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- ID Number -->
        <EditText
            android:id="@+id/etIdNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Number"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"
            android:text="123-456-789-01" />

        <!-- First Name -->
        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"
            android:text="Victoria" />

        <!-- Last Name -->
        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"
            android:text="Kholkina" />

        <!-- Birth Date -->
        <EditText
            android:id="@+id/etBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birth Date"
            android:inputType="date"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"
            android:text="30.04.2003" />

        <!-- Phone -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"
            android:text="+7 965 673 97 66" />

        <!-- Address -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"
            android:text="Russia, Penza, Ladozhskaya 115/7" />

        <!-- City -->
        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"
            android:text="Penza" />

        <!-- Verify Butonu -->
        <Button
            android:id="@+id/btnVerifyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textAllCaps="false"
            android:layout_marginBottom="24dp" />

        <!-- Hesap Bilgileri Başlık -->
        <TextView
            android:id="@+id/tvAccountInfoSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Info"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"
            android:text="lyubluviktoria@gmail.com" />

        <!-- Password -->
        <EditText
            android:id="@+id/etProfilePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp"
            android:text="******" />

        <!-- Change Password Butonu -->
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
