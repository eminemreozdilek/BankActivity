<?xml version="1.0" encoding="utf-8"?>
<!-- Ekran: Kredi Kartları (RadioGroup + Add Card + Transfer Butonları) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Geri Düğmesi -->
    <Button
        android:id="@+id/btnBackFromCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="< Back"
        android:textAllCaps="false" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvCardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Credit Cards"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- RadioGroup içinde üç adet RadioButton -->
    <RadioGroup
        android:id="@+id/rgCardNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbCard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number: XXXX-XXXX-XXXX-8015"
            android:checked="true"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rbCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number: XXXX-XXXX-XXXX-1234"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rbCard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number: XXXX-XXXX-XXXX-5678"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Arada esneme alanı -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Add Card Butonu -->
    <Button
        android:id="@+id/btnAddCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="Add Card"
        android:textAllCaps="false"
        android:layout_marginBottom="8dp"
        android:layout_widthPercent="60%" />

    <!-- Transfer Butonu -->
    <Button
        android:id="@+id/btnTransfer500"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="Transfer 500₽"
        android:textAllCaps="false"
        android:layout_widthPercent="90%" />

</LinearLayout>
